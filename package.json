{
  "name": "luber-server",
  "description": "Server for the Portfolio-Maker #GraphQL #Typescript #NodeJS",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/lopun/portfolio-maker-server",
  "author": "lopun <ujin43255252@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mailgun-js": "^0.16.1",
    "@types/node": "^10.12.0",
    "@types/twilio": "^0.0.10"
  },
  "scripts": {
    "predev": "yarn run types",
    "dev": "cd src && cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "rm -rf dist && yarn types",
    "build": "tsc",
    "postbuild": "npx copy ./src/api/**/*.graphql ./dist/src/api",
    "prestart": "yarn build",
    "start": "cross-env NODE_PATH=dist/ forever start dist/src/index.js"
  },
  "dependencies": {
    "apollo-engine": "^1.1.2",
    "apollo-server": "^2.1.0",
    "apollo-server-express": "^2.1.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^3.0.2",
    "class-validator": "^0.9.1",
    "copy": "^0.3.2",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "forever": "^0.15.3",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.1",
    "graphql-yoga": "^1.16.7",
    "helmet": "^3.14.0",
    "jsonwebtoken": "^8.3.0",
    "mailgun-js": "^0.21.0",
    "merge-graphql-schemas": "^1.5.7",
    "morgan": "^1.9.1",
    "mysql": "^2.16.0",
    "nodemon": "^1.18.4",
    "pg": "^7.5.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint-config-prettier": "^1.15.0",
    "twilio": "^3.23.1",
    "typeorm": "^0.2.7",
    "typescript": "^3.1.3"
  },
  "now": {
    "name": "portfolio-maker-server",
    "dotenv": ".env.production"
  }
}
